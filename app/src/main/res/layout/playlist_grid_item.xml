<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="196dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/artwork"
        android:layout_width="@dimen/playlist_item_artwork_size"
        android:layout_height="@dimen/playlist_item_artwork_size"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/ArtworkRoundedCorners.PlaylistItem"
        tools:src="@drawable/ic_placeholder" />

    <TextView
        android:id="@+id/name"
        style="@style/PlaylistItemInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="LOVESONGS" />

    <TextView
        android:id="@+id/tracksNumber"
        style="@style/PlaylistItemInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="18 треков" />
</LinearLayout>