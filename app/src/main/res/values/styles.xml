<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/YP_white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/corner_radius_button_main</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/YP_black</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Header">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsItemText" parent="">
        <item name="android:layout_marginStart">@dimen/medium_padding</item>
        <item name="android:layout_marginVertical">21dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsItemIcon">
        <item name="android:layout_marginTop">@dimen/margin_top_icon_settings</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_icon_settings</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_icon_settings</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">?attr/colorPrimary</item>
    </style>
</resources>