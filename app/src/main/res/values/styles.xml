<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsItemText" parent="">
        <item name="android:layout_marginStart">@dimen/medium_padding</item>
        <item name="android:layout_marginVertical">21dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsItemIcon">
        <item name="android:layout_marginTop">@dimen/margin_top_icon_settings</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_icon_settings</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_icon_settings</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">?attr/colorPrimary</item>
    </style>

    <style name="ArtworkRoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>

    <style name="ArtworkRoundedCorners.AudioPlayer">
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="TrackInfoInTrackListItem">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ErrorPlaceholderText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="SupportiveButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorOnBackground</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">54dp</item>

        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/backgroundColor</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TrackInfoInAudioPlayer">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TrackInfoInAudioPlayer.Label">
        <item name="android:textColor">@color/YP_text_gray</item>
    </style>

    <style name="LibraryTabText">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>